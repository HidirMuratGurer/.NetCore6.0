@model UserPasswordChangeModel

@{
    ViewData["Title"] = "WriterChangePassword";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

 <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">

                    <h2 class="card-title">Yazar Bilgileri Düzenleme</h2>
                    <br>
                   
                    <form class="forms-sample" method="post" enctype="multipart/form-data">

                      <div class="form-group">
                            <label for="exampleInputEmail3">Mevcut Şifrenizi Giriniz.</label>
                            <input type="password" asp-for="@Model.oldpassword" class="form-control" />
                            <span asp-validation-for="@Model.oldpassword" class="text-danger"></span>
                       </div>
                       <div class="form-group">
                            <label for="exampleInputEmail3">Yeni Şifrenizi Giriniz.</label>
                            <input type="password" asp-for="@Model.newpassword" class="form-control" />
                            <span asp-validation-for="@Model.newpassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail3">Yeni Şifrenizi Giriniz.</label>
                            <input type="password" asp-for="@Model.newpasswordagain" class="form-control" />
                            <span asp-validation-for="@Model.newpasswordagain" class="text-danger"></span>
                        </div>
                     
                      <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                      <button class="btn btn-light">Vazgeç</button>
                      <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    </form>
                    
                  </div>
                </div>
              </div>
